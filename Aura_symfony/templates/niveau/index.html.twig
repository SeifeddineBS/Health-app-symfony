{% extends 'base.html.twig' %}
{% block title%} Liste des Articles{% endblock %}

{% block body %}

 {% if niveaux %}
    <table id="niveaux" class="table table-striped">
      <thead>
        <tr>
          <th>Titre</th>

        </tr>
      </thead>
      <tbody>
        {% for niveau in niveaux %}
          <tr>
            <td>{{ niveau.titre }}</td>
           

            
           <td>
              <a href="/niveau/{{ niveau.id }}" class="btn btn-dark">Détails</a>
              <a href="/niveau/edit/{{ niveau.id }}" class="btn btn-dark">Modifier</a>
               
              <a href="/niveau/delete/{{ niveau.id }}" class="btn btn-danger" 
              onclick="return confirm('Etes-vous sûr de supprimer ce niveau?');">Supprimer</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Aucun niveau</p>
  {% endif %} 
 <a href="/niveau/new/" class="btn btn-dark">créer</a>  
  <a href="/" class="btn btn-dark">Retour</a>
{% endblock %}

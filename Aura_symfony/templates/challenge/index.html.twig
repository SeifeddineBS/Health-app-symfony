{% extends 'base.html.twig' %}
{% block title%} Liste des challenges{% endblock %}

{% block body %}

 {% if challenges %}
    <table id="articles" class="table table-striped">
      <thead>
        <tr>
          <th>Titre</th>
          <th>type</th>
          <th>description</th>
          <th>date debut </th>
          <th>date fin </th>
          
          <th>niveau</th>

          
        </tr>
      </thead>
      <tbody>
        {% for challenge in challenges %}
          <tr>
            <td>{{ challenge.titre }}</td>
            <td>{{ challenge.type }}</td>
            <td>{{ challenge.description }}</td>
           <td>{{ challenge.dateDebut|date('d/m/Y') }}</td>
           <td>{{ challenge.dateFin|date('d/m/Y') }}</td>
            
            
            <td>{{ challenge.idNiveau }}</td>

            
           <td>
              <a href="/challenge/{{ challenge.id }}" class="btn btn-dark">Détails</a>
              <a href="/challenge/edit/{{ challenge.id }}" class="btn btn-dark">Modifier</a>
               
              <a href="/challenge/delete/{{ challenge.id }}" class="btn btn-danger" 
              onclick="return confirm('Etes-vous sûr de supprimer cet article?');">Supprimer</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Aucun challenges</p>
  {% endif %} 
  <a href="/challenge/new/" class="btn btn-dark">créer</a>
   <a href="/classement/home/" class="btn btn-dark">classement</a>
       <a href="/niveau/home/" class="btn btn-dark">niveau</a>
{% endblock %}

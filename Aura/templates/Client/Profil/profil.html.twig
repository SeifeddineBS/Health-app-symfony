{% extends 'base.html.twig' %}






{% block content %}
    {{ form_start(form_modify, {attr: {'novalidate': 'novalidate'}}) }}
    {{ form_row(form_modify._token) }}
    <link href={{ asset('assets/css/styleProfile.css') }} rel="stylesheet">

    <div style="padding:70px">

    </div>


    <div class="container">
        <div class="row gutters">
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="account-settings">
                            <div class="user-profile">
                                <div class="user-avatar">
                                    <img src="assets/img/Profile' . $User.picture . 'image.jpg">
                                </div>

                                <h5 class="user-name">{{ form_modify.vars.value.nom }} {{ form_modify.vars.value.prenom }}</h5>
                                <h6 class="user-email">{{ form_modify.vars.value.email }}</h6>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Vos informations</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">

                                    <label for="phone">Nom</label>

                                  {{ form_widget(form_modify.nom,{ 'attr': {'class': "form-control",
                                          'placeholder': 'Votre Nom'|trans} }) }}
                                    <div style="color:red;"> {{ form_errors(form_modify.nom) }}</div>



                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="phone">Email</label>

                                    {{ form_widget(form_modify.email,{ 'attr': {'class': "form-control",
                                        'placeholder': 'Votre email'|trans} }) }}
                                    <div style="color:red;"> {{ form_errors(form_modify.email) }}</div>

                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="phone">Prenom</label>
                                    {{ form_widget(form_modify.prenom,{ 'attr': {'class': "form-control",
                                        'placeholder': 'Votre prenom'|trans} }) }}
                                    <div style="color:red;"> {{ form_errors(form_modify.prenom) }}</div>                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="website">Numero telephone</label>
                                    {{ form_widget(form_modify.tel,{ 'attr': {'class': "form-control",
                                        'placeholder': 'Votre Telephone'|trans} }) }}
                                    <div style="color:red;"> {{ form_errors(form_modify.tel) }}</div>                                 </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="Street">Mot de passe</label>
                                    {{ form_row(form_modify.password.first,{ 'attr': {'class': "form-control",
                                        'placeholder': 'Votre mot de passe'|trans} }) }}
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="sTate">Confirmer</label>
                                    {{ form_row(form_modify.password.second,{ 'attr': {'class': "form-control",
                                        'placeholder': 'Confirmer votre mot de passe'|trans} }) }}
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">

                                <div class="form-group">
                                    <label for="zIp">Adresse</label>
                                    {{ form_widget(form_modify.adresse,{ 'attr': {'class': "form-control",
                                        'placeholder': 'Votre Adresse'|trans} }) }}
                                    <div style="color:#ff0000;"> {{ form_errors(form_modify.adresse) }}
                                    </div>
                                </div>
                            </div>

                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="text-right">
                                    <button type="submit" class="btn btn-success">Modifier</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="padding:70px">

    </div>
        <div id="divCheckbox" style="display: none;">{{ form_rest(form_modify) }}</div>


        {{ form_end(form_modify, {'render_rest': false}) }}

{% endblock %}



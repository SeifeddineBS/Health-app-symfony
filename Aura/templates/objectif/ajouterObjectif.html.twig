{% extends 'base.html.twig' %}
{% block body %}
    <br>
    <br>
    <br>
    <br>
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Ajouter un objectif</h2>
                    <p>“Avoir des objectifs est non seulement nécessaire pour nous motiver, mais c’est essentiel pour que nous restions en vie.” </p>
                </div>
            </div>
        </div>
        <div class="container">
            <ol>
                <li><a href="index.html">Home</a></li>
                <li>Ajout d'un objectif</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->


    <div class="container mt -4">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-9"> {{ form_row(form.description) }}</div>
        </div>
        <div class="row">
            <div class="col-md-3"> {{ form_row(form.reponse) }}</div>
            <div class="col-md-3"> {{ form_row(form.duree) }}</div>
            <div class="col-md-3"> {{ form_row(form.datedebut) }}</div>
        </div>
        <div class="row">
            <div class="col-md-3"> {{ form_row(form.idclient) }}</div>
        </div>
        {{ form_rest(form) }}
        <br>
        <button class="btn btn-primary"> Ajouter</button>
        {{ form_end(form) }}
        <br>
    </div>
{% endblock %}